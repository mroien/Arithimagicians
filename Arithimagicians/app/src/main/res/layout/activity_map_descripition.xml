<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:contentDescription="MapDescription"
    tools:context="ics499.arithimagicians.MapDescriptionActivity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="3">


    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="android:layout_width=&quot;370dp&quot;     android:layout_height=&quot;320dp&quot;android:layout_width=&quot;370dp&quot;     android:layout_height=&quot;320dp&quot;android:layout_width=&quot;370dp&quot;     android:layout_height=&quot;320dp&quot;android:layout_width=&quot;370dp&quot;     android:layout_height=&quot;320dp&quot;"
        android:id="@+id/mapDescTextView"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
 />

    <Button
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/closeButton"
        android:onClick="closeClick"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="220dp"
     />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fight"
        android:id="@+id/fightButton"
        android:onClick="fightClick"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="220dp"
 />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DiceRollResults">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="roll"
        android:id="@+id/firstRowFirstValue"
        android:layout_marginTop="98dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="op"
        android:id="@+id/firstRowOp"
        android:layout_marginTop="98dp"
        android:layout_marginLeft="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="roll"
        android:id="@+id/firstRowSecondValue"

        android:layout_marginTop="98dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="op"
        android:id="@+id/firstRowSecondOp"
        android:layout_marginTop="98dp"
        android:layout_marginLeft="215dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ans"
        android:id="@+id/firstRowAns"

        android:layout_marginLeft="280dp"
        android:layout_marginTop="98dp" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="results"
        android:id="@+id/firstRowResults"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30dp"
        android:layout_alignRight="@+id/firstRowAns"
        android:layout_alignEnd="@+id/firstRowAns" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/secondRowFirstValue"
        android:layout_marginTop="224dp"
        android:layout_marginLeft="30dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/secondRowOp"
        android:layout_marginTop="224dp"
        android:layout_marginLeft="90dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/secondRowSecondValue"
        android:layout_marginTop="224dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/secondRowSecondOp"
        android:layout_marginTop="224dp"
        android:layout_marginLeft="215dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/secondRowAns"
        android:layout_marginTop="224dp"
        android:layout_marginLeft="280dp"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/secondRowResults"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:layout_alignRight="@+id/secondRowAns"
        android:layout_alignEnd="@+id/secondRowAns" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/closeButton"
        android:onClick="closeClick"
        android:layout_marginTop="365dp"
        android:layout_marginLeft= "140dp"/>
</RelativeLayout>

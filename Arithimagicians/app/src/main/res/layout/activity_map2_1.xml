<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/map2_1"
    tools:context="ics499.arithimagicians.DisplayMap">
    <ProgressBar
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/playerProgressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:max="100"
        android:progress="100"
        android:indeterminate="false"
        android:visibility="visible"
        android:layout_marginLeft="60dp"
        android:progressDrawable="@drawable/progressbarmap"/>


    <TextView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:text="Player HP : 100"
        android:background="#00000000"
        android:layout_alignLeft="@id/playerProgressBar"
        android:layout_alignTop="@id/playerProgressBar"
        android:layout_alignRight="@id/playerProgressBar"
        android:layout_alignBottom="@id/playerProgressBar"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:id="@+id/playerHealthTextView" />
    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/inventoryButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:clickable="true"
        android:enabled="true"
        android:onClick="inventoryClicked"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/button1_1"
        android:background="@null"
        android:clickable="true"
        android:enabled="true"
        android:onClick="button1_1Clicked"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="245dp"
        android:layout_marginBottom="-5dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/button1_2"
        android:background="@null"
        android:clickable="true"
        android:enabled="true"
        android:onClick="button1_1Clicked"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="25dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/button1_3"
        android:background="@null"
        android:clickable="true"
        android:enabled="true"
        android:onClick="button1_1Clicked"
        android:layout_marginTop="485dp"
        android:layout_marginLeft="87dp" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/button1_4"
        android:background="@null"
        android:clickable="true"
        android:enabled="true"
        android:onClick="button1_1Clicked"
        android:layout_marginTop="459dp"
        android:layout_marginLeft="30dp" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/button1_5"
        android:background="@null"
        android:clickable="true"
        android:enabled="true"
        android:onClick="button1_1Clicked"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="100dp" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/button2_1"
        android:background="@null"
        android:clickable="true"
        android:enabled="true"
        android:onClick="button1_1Clicked"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="115dp" />
</RelativeLayout>
